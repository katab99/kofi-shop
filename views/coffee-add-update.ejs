<%- include('header')-%>
<%- include('navbar')-%>

    <div class="container">
      <h1> Coffee</h1>
      <br>
  
        <form>
          <div class="mb-3">
            <label for="exampleInputCoffeeName" class="form-label">Coffee Name</label>
            <input type="text" class="form-control" id="exampleInputCoffeeName" aria-describedby="coffeeNameHelp">
            <div id="coffeeNameHelp" class="form-text"> Write the name of the new coffee you want to update. </div>
          </div>
          
          <div class="mb-3">
            <label for="exampleInputCoffeePrice" class="form-label">Price</label>
            <input type="number" class="form-control" id="exampleInputCoffeePrice" aria-describedby="coffeePriceHelp">
            <div id="coffeePriceHelp" class="form-text"> Give the price in HUF. </div>
          </div>
  
          <div class="mb-3">
            <label for="exampleInputCoffeeStatus" class="form-select>">State</label>
            <select class="form-select" id="exampleInputCoffeeStatus">
              <option value="1">Available</option>
              <option value="0">Unavailable</option>
            </select>
          </div>
  
          <a href="/coffee" class="btn btn-primary">Submit</a>
        </form>
  
      </div>
<%- include('footer')-%>