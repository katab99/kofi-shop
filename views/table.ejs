<%- include('header')%>
<%- include('navbar', {page : ''})-%>

    <div class="container">
      <h1> Table <%=table.num%> <span class="badge rounded-pill
      <%if(table.state === 'empty'){
        %> text-bg-dark">Empty<%
        }else if(table.state === 'occupied'){
        %>text-bg-success">Occupied<%
        }else if((table.state === 'reserved')){
        %> text-bg-danger">Reserved<%
        }%> </span></h1>
      <br>
  
        <h3>Orders</h3>
        <div class="row">
          <div class="col-12">
            <table class="table table-striped table-bordered">
              <tr>
                <th>Order</th>
                <th>Price</th>
                <th>&nbsp;</th>
              </tr>

              <% orders.forEach(function(order){%>
              <tr>
                <td><%= order.name%></td>
                <td><%= order.price%></td>
                <td><a href="/table/<%=table._id%>/deleteOrder/<%=order._id%>" class="btn btn-small btn-danger">Delete Item</a></td>
              </tr>
              <% }); %>
            </table>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a href="/table/<%=table._id%>/addOrder" class="btn btn-primary">Add Order</a>
              <a href="/table/<%=table._id%>/updateStatus" class="btn btn-primary">Update Table Status</a>
              <a href="/table/<%=table._id%>/clear" class="btn btn-danger">Clear Table</a>
            </div>

          </div>
        </div>        
      </div>
<%- include('footer')%>
